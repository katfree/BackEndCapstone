@model BackEndCapstone.Models.WatchPartyViewModels.IndexViewModel


@{
    ViewData["Title"] = "Index";
}



<div class="form-group col-md-6 pt-3">
    <form asp-action="Index">
        <select asp-for="@Model.SelectedTeam" class="form-control" id="SelectedTeam" asp-items=@ViewBag.TeamId>
            <option value=0>Choose Team</option>
            <option value="">All Teams</option>
        </select>
    <input type ="submit" asp-action="Index"  class="btn btn-secondary" value="Filter ">                
    </form>
</div>

<div class="card-columns">
    @foreach (var item in Model.WatchParties)
    {
        if (item.Date >= DateTime.Now)
        {
        <div class="card border-secondary mb-3 mt-3 box-shadow " style="width: 18rem;">
            <img src="~/images/partypic/@item.ImagePath" class="card-img-top" alt="...">
            <div class="card-body ">
                <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Title)</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Date: @Html.DisplayFor(modelItem => item.Date)</li>
                <li class="list-group-item">Team: @Html.DisplayFor(modelItem => item.Team.Name)</li>
            </ul>
            <div class="card-body">
                <a asp-action="Details" asp-route-id="@item.WatchPartyId" class="btn btn-primary">View Details</a>
            </div>

        </div>
        }
    }
</div>
